block variables
	- const { production } = htmlWebpackPlugin.options;
	- const path = production ? '/solovey' : '';
	- const img = `${path}/assets/img`;

doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		title #{title}
	body
		.page
			block content